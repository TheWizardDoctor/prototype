<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @feature.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @feature.description %>
</p>

<p>
  <strong>Initiative:</strong>
  <%= link_to @feature.initiative_id, initiative_path(@feature.initiative_id) %>
</p>

<p>
  <strong>Quater:</strong>
  <%= @feature.quater %>
</p>

<%= link_to 'Edit', edit_feature_path(@feature) %> |
<%= link_to 'Features', features_path %>
<br>
<br>
<p>
  <strong>Teams:</strong>
  <% Connector.where(feature_id: @feature.id).find_each do |c| %>
    <% team = Team.find_by(id: c.team_id) %>
    <p>
    <strong>  Name:</strong>
    <%= link_to team.name, team_path(team) %>
     | <strong>Percentage invested: </strong>
     <%= "#{c.investment}%" %>
   </p>
  <% end %>
</p>
