<p id="notice"><%= notice %></p>

<%= form_tag(features_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Features" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<a id="newBTN" class="btn btn-lg btn-success pull-right" href="<%=new_feature_path%>">New Feature +</a>
<br>
<h1>Features</h1>
<% features_sorting() %>
<!-- These buttongs sort the features -->
<%= render "sorting_button", var: 'Name' %>
<%= render "sorting_button", var: 'Initiative' %>
<%= render "sorting_button", var: 'Quater' %>

<table>
  <thead class="center">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Initiative</th>
      <th>Quater</th>
      <th>Team Type</th>
      <th>Primary Team</th>
      <th>Owner</th>
      <th>Scope</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= will_paginate @features%>      <!-- paginates -->
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.name %></td>
        <td><%= feature.description %></td>
        <td><%= link_to Initiative.find(feature.initiative_id).name, initiative_path(feature.initiative_id) %></td>
        <td><%= feature.quater %></td>
        <td><%= feature.team_type %></td>
        <td><%= Team.find_by(id: feature.primary_team_id) == nil ? "-" : Team.find_by(id: feature.primary_team_id).name %></td>
        <td><%= feature.owner %></td>
        <td><%= feature.scope %></td>
        <td><%= link_to 'Show', feature %></td>
        <td><%= link_to 'Edit', edit_feature_path(feature) %></td>
        <td><%= link_to 'Destroy', feature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
