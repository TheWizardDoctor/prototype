<body>

  <h1>Roadmaps</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @roadmaps.each do |roadmap| %>
        <tr>
          <td><%= roadmap.name %></td>
          <td><%= roadmap.description %></td>
          <td><%= link_to 'Show', roadmap %></td>
          <td><%= link_to 'Edit', edit_roadmap_path(roadmap) %></td>
          <td><%= link_to 'Destroy', roadmap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <h1>Initiatives</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Roadmap</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @initiatives.each do |initiative| %>
        <tr>
          <td><%= initiative.name %></td>
          <td><%= initiative.description %></td>
          <td><%= initiative.roadmap_id %></td>
          <td><%= link_to 'Show', initiative %></td>
          <td><%= link_to 'Edit', edit_initiative_path(initiative) %></td>
          <td><%= link_to 'Destroy', initiative, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <h1>Features</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Initiative</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @features.each do |feature| %>
        <tr>
          <td><%= feature.name %></td>
          <td><%= feature.description %></td>
          <td><%= feature.initiative_id %></td>
          <td><%= link_to 'Show', feature %></td>
          <td><%= link_to 'Edit', edit_feature_path(feature) %></td>
          <td><%= link_to 'Destroy', feature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <h1>Teams</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Feature</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.name %></td>
          <td><%= team.description %></td>
          <td><%= team.feature_id %></td>
          <td><%= link_to 'Show', team %></td>
          <td><%= link_to 'Edit', edit_team_path(team) %></td>
          <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</body>
